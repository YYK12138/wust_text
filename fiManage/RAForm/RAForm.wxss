.top{
  width: 100vw;
  height: 15vh;
}

.group{
  width: 100vw;
  height: 20vh;
  background-color:#f6f6f6;
}


.user{
  float: left;
  width: 30vw;
  height:20vh;
}

.groupname{
  font-weight: bold;
  text-indent: 4vw;
  margin-top: 1vh;
  padding-top: 1vh;
}

.style1{
  text-indent: 4vw;
  padding-top: 1vh;
  font-size: 30rpx;
}

.style2{
  text-indent: 4vw;
  padding-top: 1vh;
  float: left;
  font-size: 30rpx;
}

.style3{
  float: right;
  color:red;
  font-size: 32rpx;
}

.style4{
  float: right;
  color:rgb(0, 255, 0);
  font-size: 32rpx;
}

.button{
  background-color: white;
  font-size: 30rpx;
  float: right;
  margin-left: 10vw;
  padding-left: 0vw;
  height: 5vh;
  line-height: 5vh;
}
.button:hover{
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
}